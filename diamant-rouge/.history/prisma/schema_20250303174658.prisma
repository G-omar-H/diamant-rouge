export const getServerSideProps: GetServerSideProps = async (context) => {
  const id = parseInt(context.params?.id as string, 10);
  if (isNaN(id)) return { notFound: true };

  const product = await prisma.product.findUnique({
    where: { id },
    include: {
      translations: true,
