    payload = decoded as unknown as DecodedPayload;
  } catch (err: any) {
    return res.status(401).json({ error: "Unauthorized: Invalid token" });
  }

  // Use the user id for all operations
  const userId = Number(payload.id);

  if (req.method === "GET") {
